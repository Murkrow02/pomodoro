{
  "form": {
    "title": "Pomodoro Timer",
    "description": "Configure your work/break durations and number of slices/rounds.",
    "fields": [
      {
        "name": {
          "type": "string",
          "label": "Title",
          "required": true,
          "placeholder": "Pomodoro"
        },
        "work_minutes": {
          "type": "string",
          "label": "Work duration (minutes)",
          "required": true,
          "placeholder": "25"
        },
        "short_break_minutes": {
          "type": "string",
          "label": "Short break duration (minutes)",
          "required": true,
          "placeholder": "5"
        },
        "long_break_minutes": {
          "type": "string",
          "label": "Long break duration (minutes)",
          "required": true,
          "placeholder": "15"
        },
        "slices_per_round": {
          "type": "string",
          "label": "Work slices per round",
          "required": true,
          "placeholder": "4"
        },
        "rounds": {
          "type": "string",
          "label": "Total rounds",
          "required": true,
          "placeholder": "1"
        }
      }
    ]
  }
}
